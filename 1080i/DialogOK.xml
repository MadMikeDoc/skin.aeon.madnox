<?xml version="1.0" encoding="utf-8"?>
<window>
    <defaultcontrol always="true">10</defaultcontrol>
    <zorder>5</zorder>
    <coordinates>
        <left>0</left>
        <top>0</top>
        <system>1</system>
    </coordinates>
    <include>Animation_DialogPopup</include>
    <controls>
        <include>DialogBackFade</include>
        <control type="group">
            <left>570</left>
            <top>375</top>
            <animation effect="slide" end="0,-300" time="0" condition="VideoPlayer.IsFullscreen|[Window.IsActive(home) + Skin.HasSetting(lowermainmenu)]">Conditional</animation>
            <control type="image">
                <width>780</width>
                <height>330</height>
                <texture>dialogs/dialog_back_shadow.png</texture>
                <colordiffuse>$VAR[ColorDiffuseVar]</colordiffuse>
                <visible>!Skin.HasSetting(DisableGlowbar)</visible>
                <include>PanelGlowFade</include>
            </control>
            <control type="image">
                <width>780</width>
                <height>330</height>
                <texture>dialogs/dialog_back.png</texture>
                <colordiffuse>$VAR[DialogColorVar]</colordiffuse>
            </control>
            <control type="image">
                <left>15</left>
                <width>750</width>
                <height>60</height>
                <texture border="1">osd/osd_settings_buttonnf.png</texture>
            </control>
            <control type="label" id="1">
                <width>780</width>
                <height>78</height>
                <textoffsetx>45</textoffsetx>
                <align>center</align>
                <textcolor>$VAR[FontColorVar]</textcolor>
                <scroll>true</scroll>
            </control>
            <control type="grouplist">
                <top>68</top>
				<control type="textbox" id="9">
					<description>text</description>
                    <width>780</width>
                    <height>330</height>
                    <textoffsetx>45</textoffsetx>
                    <align>center</align>
                    <textcolor>white3</textcolor>
                    <wrapmultiline>true</wrapmultiline>
					<autoscroll time="3000" delay="4000" repeat="5000">Skin.HasSetting(AutoScroll)</autoscroll>
				</control>				
            </control>
            <control type="button" id="10">
                <left>278</left>
                <top>228</top>
                <width>225</width>
                <height>45</height>
                <textoffsetx>30</textoffsetx>
                <align>center</align>
                <label>186</label>
                <textcolor>grey2</textcolor>
                <focusedcolor>white3</focusedcolor>
                <colordiffuse>$VAR[ColorDiffuseVar]</colordiffuse>
                <onup>10</onup>
                <ondown>10</ondown>
                <onleft>11</onleft>
                <onright>11</onright>
            </control>
        </control>
    </controls>
</window>